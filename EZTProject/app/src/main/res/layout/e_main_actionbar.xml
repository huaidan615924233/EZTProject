<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_actionbar_ll"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/inc_action_bar_height"
    android:background="@color/inc_item_background"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/main_title_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:src="@drawable/logo_topbar" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/inc_dp_0_5"
        android:layout_alignParentBottom="true"
        android:background="@color/inc_list_bar_line" />

    <RelativeLayout
        android:id="@+id/e_t_right_pre"
        android:layout_width="@dimen/inc_action_bar_height"
        android:layout_height="@dimen/inc_action_bar_height"
        android:layout_alignParentRight="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/e_t_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_add_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/e_add_car"
        android:layout_width="@dimen/inc_action_bar_height"
        android:layout_height="@dimen/inc_action_bar_height"
        android:layout_alignParentRight="true"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_add_btn" />
    </RelativeLayout>

</RelativeLayout>