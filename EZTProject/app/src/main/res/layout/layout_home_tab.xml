<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgTabIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/app_name"
            android:focusable="true"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:src="@drawable/tab_index_btn001_selector"/>

        <com.ezt.eztproject.view.SquareTextView
            android:id="@+id/txtTabMsgCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/imgTabIcon"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_red_circular_shape"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@android:color/white"
            android:textSize="6sp"
            android:visibility="gone"
            android:textStyle="bold"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txtTabName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:text="头条"
        android:textColor="@drawable/tab_index_text_selector"
        android:textSize="12sp"/>
</LinearLayout>