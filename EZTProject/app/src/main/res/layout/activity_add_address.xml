<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/e_act_bg">

    <com.ezt.eztproject.view.TopBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
    </com.ezt.eztproject.view.TopBar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_bar"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inc_dp_10"
                android:layout_marginRight="@dimen/inc_dp_10"
                android:layout_marginTop="@dimen/inc_dp_20"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inc_dp_5"
                    android:layout_marginRight="@dimen/inc_dp_5"
                    android:layout_marginTop="@dimen/inc_dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/inc_dp_80"
                        android:text="@string/edit_detail_pname"
                        android:textColor="@color/inc_black"
                        android:textSize="@dimen/inc_dp_16" />

                    <EditText
                        android:id="@id/edit_detail_pname"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/inc_dp_40"
                        android:layout_marginLeft="@dimen/inc_dp_20"
                        android:background="@drawable/btn_sre_normal"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="3.0dip"
                        android:singleLine="true"
                        android:textColor="@color/inc_prompt"
                        android:textColorHint="@color/inc_prompt"
                        android:textSize="@dimen/inc_sp_17" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inc_dp_5"
                    android:layout_marginRight="@dimen/inc_dp_5"
                    android:layout_marginTop="@dimen/inc_dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/inc_dp_80"
                        android:text="@string/edit_detail_contact"
                        android:textColor="@color/inc_black"
                        android:textSize="@dimen/inc_dp_16" />

                    <EditText
                        android:id="@id/edit_detail_contact"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/inc_dp_40"
                        android:layout_marginLeft="@dimen/inc_dp_20"
                        android:background="@drawable/btn_sre_normal"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:paddingLeft="3.0dip"
                        android:singleLine="true"
                        android:textColor="@color/inc_prompt"
                        android:textColorHint="@color/inc_prompt"
                        android:textSize="@dimen/inc_sp_17" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inc_dp_5"
                    android:layout_marginRight="@dimen/inc_dp_5"
                    android:layout_marginTop="@dimen/inc_dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40.0dip"
                        android:gravity="center_vertical"
                        android:minWidth="@dimen/inc_dp_80"
                        android:text="@string/edit_detail_prive"
                        android:textColor="@color/inc_black"
                        android:textSize="@dimen/inc_dp_16" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/inc_dp_20"
                        android:background="@drawable/btn_sre_normal"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@id/spinner_detail_prive"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/detail_prive_text"
                            android:layout_width="fill_parent"
                            android:layout_height="40.0dip"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bk_date"
                            android:gravity="center_vertical"
                            android:textColor="@color/yulequan_item_uname"
                            android:textSize="@dimen/inc_dp_16" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inc_dp_5"
                    android:layout_marginRight="@dimen/inc_dp_5"
                    android:layout_marginTop="@dimen/inc_dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40.0dip"
                        android:gravity="center_vertical"
                        android:minWidth="@dimen/inc_dp_80"
                        android:text="@string/edit_detail_city"
                        android:textColor="@color/inc_black"
                        android:textSize="@dimen/inc_dp_16" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/inc_dp_20"
                        android:background="@drawable/btn_sre_normal"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@id/spinner_detail_city"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/detail_city_text"
                            android:layout_width="fill_parent"
                            android:layout_height="40.0dip"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bk_date"
                            android:gravity="center_vertical"
                            android:textColor="@color/yulequan_item_uname"
                            android:textSize="@dimen/inc_dp_16" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inc_dp_5"
                    android:layout_marginRight="@dimen/inc_dp_5"
                    android:layout_marginTop="@dimen/inc_dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40.0dip"
                        android:gravity="center_vertical"
                        android:minWidth="@dimen/inc_dp_80"
                        android:text="@string/edit_detail_area"
                        android:textColor="@color/inc_black"
                        android:textSize="@dimen/inc_dp_16" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/inc_dp_20"
                        android:background="@drawable/btn_sre_normal"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@id/spinner_detail_area"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/detail_area_text"
                            android:layout_width="fill_parent"
                            android:layout_height="40.0dip"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bk_date"
                            android:gravity="center_vertical"
                            android:textColor="@color/yulequan_item_uname"
                            android:textSize="@dimen/inc_dp_16" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inc_dp_5"
                    android:layout_marginRight="@dimen/inc_dp_5"
                    android:layout_marginTop="@dimen/inc_dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/inc_dp_80"
                        android:text="@string/edit_detail_address"
                        android:textColor="@color/inc_black"
                        android:textSize="@dimen/inc_dp_16" />

                    <EditText
                        android:id="@id/edit_detail_address"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/inc_dp_40"
                        android:layout_marginLeft="@dimen/inc_dp_20"
                        android:background="@drawable/btn_sre_normal"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="3.0dip"
                        android:singleLine="true"
                        android:textColor="@color/inc_prompt"
                        android:textColorHint="@color/inc_prompt"
                        android:textSize="@dimen/inc_sp_17" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@id/btn_save"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/inc_dp_45"
                android:layout_marginBottom="@dimen/inc_dp_20"
                android:layout_marginLeft="@dimen/inc_dp_20"
                android:layout_marginRight="@dimen/inc_dp_20"
                android:layout_marginTop="@dimen/inc_dp_20"
                android:gravity="center"
                android:background="@drawable/e_shape_commplete"
                android:text="@string/save"
                android:textColor="@color/inc_item_background"
                android:textSize="@dimen/inc_dp_14" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>