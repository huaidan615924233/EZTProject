<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300.0dip"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/inc_dp_20"
            android:gravity="center_vertical"
            android:text="@string/e_text_select_type"
            android:textColor="@color/e_text_p_info"
            android:textSize="@dimen/inc_sp_16"
            android:visibility="visible" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/inc_dp_0_5"
            android:background="@color/inc_complete_line" />

        <LinearLayout
            android:id="@id/select_ll_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inc_dp_10"
            android:layout_marginRight="@dimen/inc_dp_5"
            android:layout_marginTop="@dimen/inc_dp_15"
            android:orientation="horizontal">

            <RadioButton
                android:id="@id/select_p_t_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inc_dp_5"
                android:button="@mipmap/btn_personal_normal1"/>

            <LinearLayout
                android:id="@id/info_car_name_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@id/info_car_name_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="个人司机"
                    android:textColor="@color/black"
                    android:textSize="@dimen/inc_dp_16" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center_vertical"
                    android:text="开自己车的个体司机"
                    android:textColor="@color/yulequan_item_uname"
                    android:textSize="@dimen/inc_dp_13" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@id/select_ll_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inc_dp_10"
            android:layout_marginRight="@dimen/inc_dp_5"
            android:layout_marginTop="@dimen/inc_dp_15"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/select_p_t_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inc_dp_5"
                android:src="@mipmap/btn_team_normal1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="车队司机"
                    android:textColor="@color/black"
                    android:textSize="@dimen/inc_dp_16" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center_vertical"
                    android:text="为车队开车的司机"
                    android:textColor="@color/yulequan_item_uname"
                    android:textSize="@dimen/inc_dp_13" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@id/select_ll_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inc_dp_10"
            android:layout_marginRight="@dimen/inc_dp_5"
            android:layout_marginTop="@dimen/inc_dp_15"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/select_p_t_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inc_dp_5"
                android:src="@mipmap/btn_host_normal1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="车队老板"
                    android:textColor="@color/black"
                    android:textSize="@dimen/inc_dp_16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="车队管理者，也可加气消费"
                        android:textColor="@color/yulequan_item_uname"
                        android:textSize="@dimen/inc_dp_13" />

                    <TextView
                        android:id="@id/car_master_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="不能加气消费"
                        android:textColor="@color/e_select_utype_hint"
                        android:textSize="@dimen/inc_dp_13"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@id/tx_utype_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip"
            android:text="* 请务必正确的选择您的身份，一旦保存信息后将不能修改个人身份。"
            android:textColor="@color/e_select_utype_hint"
            android:textSize="@dimen/inc_dp_13"
            android:visibility="gone" />

        <TextView
            android:id="@id/tx_utype_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip"
            android:text="* 变更身份后，已填写的内容会被清空。"
            android:textColor="@color/e_select_utype_hint"
            android:textSize="@dimen/inc_dp_13"
            android:visibility="gone" />

        <Button
            android:id="@id/btn_select_complete"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/inc_dp_50"
            android:layout_marginTop="@dimen/inc_dp_20"
            android:background="@drawable/button_utype_cannot_selector_bg"
            android:clickable="false"
            android:gravity="center"
            android:text="确认身份"
            android:textColor="@color/white"
            android:textSize="@dimen/inc_dp_16" />
    </LinearLayout>
</LinearLayout>